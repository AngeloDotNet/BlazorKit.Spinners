@inherits SpinnerBase

@if (IsLoading)
{
    if (LoadingTemplate == null)
    {
        <SpinnerChooser Center="@Center" Spinner="Spinner" Size="@Size" Color="@Color" @attributes="AdditionalAttributes" />
    }
    else
        @LoadingTemplate
    }
    else
    {
        if (!HasError || ErrorContentTemplate == null)
            @ContentTemplate

            if (HasError)
                @ErrorContentTemplate
            }

