@namespace BlazorKit.Spinners
@inherits SpinnerBase

<SpinnerContainer>
    <span class="loader-2 @CssClass" style="@Style" />
</SpinnerContainer>

<style>
    .loader-2 {
        width: @Size;
        height: @Size;
        border: 3px solid @AccentColor;
        border-radius: 50%;
        display: inline-block;
        position: relative;
        -webkit-animation: rotation 1s linear infinite;
        animation: rotation 1s linear infinite;
    }

        .loader-2:after {
            content: "";
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 3px solid transparent;
            border-bottom-color: @Color;
        }

    @@keyframes rotation {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

        .loaderCenter {
            margin-left: auto;
            margin-right: auto;
            display: block;
        }

</style>