@namespace BlazorKit.Spinners
@inherits SpinnerBase

<SpinnerContainer>
    <span class="loader-1 @CssClass" style="@Style" />
</SpinnerContainer>

<style>
    .loader-1 {
        width: @Size;
        height: @Size;
        border: 5px solid @AccentColor;
        border-bottom-color: @Color;
        border-radius: 50%;
        display: inline-block;
        -webkit-animation: rotation 1s linear infinite;
        animation: rotation 1s linear infinite;
    }

    @@keyframes rotation {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }

    .loaderCenter {
        margin-left: auto;
        margin-right: auto;
        display: block;
    }

</style>