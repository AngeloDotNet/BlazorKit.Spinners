@namespace BlazorKit.Spinners
@inherits SpinnerBase

@switch (Spinner)
{
    case SpinnerTemplate.Loader2:
        <Loader2 Center="@Center" Size="@Size" AccentColor="@AccentColor" Color="@Color" @attributes="AdditionalAttributes" />
        break;
    case SpinnerTemplate.Loader3:
        <Loader3 Center="@Center" Size="@Size" AccentColor="@AccentColor" Color="@Color" @attributes="AdditionalAttributes" />
        break;
    case SpinnerTemplate.Loader4:
        <Loader4 Center="@Center" Size="@Size" AccentColor="@AccentColor" Color="@Color" @attributes="AdditionalAttributes" />
        break;
    case SpinnerTemplate.Loader5:
        <Loader5 Center="@Center" Size="@Size" AccentColor="@AccentColor" Color="@Color" @attributes="AdditionalAttributes" />
        break;
    case SpinnerTemplate.Loader6:
        <Loader6 Center="@Center" Size="@Size" AccentColor="@AccentColor" Color="@Color" @attributes="AdditionalAttributes" />
        break;
    case SpinnerTemplate.Loader7:
        <Loader7 Center="@Center" Size="@Size" AccentColor="@AccentColor" Color="@Color" @attributes="AdditionalAttributes" />
        break;
    case SpinnerTemplate.Loader8:
        <Loader8 Center="@Center" Size="@Size" AccentColor="@AccentColor" Color="@Color" @attributes="AdditionalAttributes" />
        break;
    case SpinnerTemplate.Loader1:
    default:
        <Loader1 Center="@Center" Size="@Size" AccentColor="@AccentColor" Color="@Color" @attributes="AdditionalAttributes" />
        break;
}

@code {
    [Parameter] public SpinnerTemplate Spinner { get; set; }
}